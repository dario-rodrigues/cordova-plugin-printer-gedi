<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-printer-gedi"
        version="1.0.0">

    <name>Printer</name>

    <description>
        Cordova plugin to print documents using SDK GEDI.
    </description>

    <repo>
        https://github.com/dario-rodrigues/cordova-plugin-printer-gedi.git
    </repo>

    <keywords>
        print, printer, android, sdk, gedi
    </keywords>

    <license>Apache 2.0</license>

    <author>Dario Rodrigues</author>

    <!-- cordova -->
    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <!-- interface -->
    <js-module src="www/printer.js" name="Printer">
        <clobbers target="plugin.printer.gedi" />
        <clobbers target="cordova.plugins.printer.gedi" />
    </js-module>

    <!-- android -->
    <platform name="android">
	    <framework src="src/android/build.gradle" custom="true" type="gradleReference"/>
        <framework src="com.android.support:support-v4:$ANDROID_SUPPORT_V4_VERSION"/>
        <lib-file src="src/android/payment-1.14.10.181016.aar"/>
        <preference name="ANDROID_SUPPORT_V4_VERSION" default="27.+"/>
        
	    <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Printer">
                <param name="android-package" value="cordova-plugin-printer-gedi"/>
            </feature>
        </config-file>

		<source-file src="src/android/Printer.java" target-dir="src/cordova/plugin/printer/gedi" />
    </platform>
</plugin>
